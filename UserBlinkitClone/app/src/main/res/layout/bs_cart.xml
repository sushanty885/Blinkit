<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:visibility="gone"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Cart Icon -->
        <FrameLayout
            android:id="@+id/flCart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cart"
                 />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_add"
                app:tint="@color/green" />

        </FrameLayout>

        <!-- Item Count -->
        <TextView
            android:id="@+id/tvCartItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="4 Items in Cart"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/flCart"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Arrow -->
        <ImageView
            android:id="@+id/ivCartArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_arrow_up"
            app:tint="@color/green"
            app:layout_constraintBottom_toBottomOf="@id/tvCartItemCount"
            app:layout_constraintStart_toEndOf="@id/tvCartItemCount"
            app:layout_constraintTop_toTopOf="@id/tvCartItemCount" />

        <!-- Next Button -->
        <TextView
            android:id="@+id/tvNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_green_rounded_corners"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawablePadding="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>